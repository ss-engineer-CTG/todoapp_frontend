#!/bin/sh
# Pre-commit hook for Todo App
# Runs lint checks and type checking before allowing commits

echo "ğŸ” Running pre-commit checks..."

# Check if we're in frontend directory or have frontend changes
if git diff --cached --name-only | grep -q "^frontend/"; then
  echo "ğŸ“ Frontend changes detected - running checks..."
  cd frontend
  
  # Run lint-staged for staged files only
  echo "ğŸ”§ Running lint-staged..."
  npx lint-staged
  if [ $? -ne 0 ]; then
    echo "âŒ Lint-staged failed. Please fix the issues before committing."
    exit 1
  fi
  
  # Run TypeScript type checking on the entire project
  echo "ğŸ” Running TypeScript type check..."
  npm run type-check
  if [ $? -ne 0 ]; then
    echo "âŒ TypeScript type check failed. Please fix the type errors before committing."
    exit 1
  fi
  
  cd ..
fi

# Check if we're in backend directory or have backend changes
if git diff --cached --name-only | grep -q "^backend/"; then
  echo "ğŸ Backend changes detected - running checks..."
  npm run lint:backend
  if [ $? -ne 0 ]; then
    echo "âŒ Backend linting failed. Please fix the issues before committing."
    exit 1
  fi
fi

echo "âœ… All pre-commit checks passed!"
