{
    "base_directories": {
      "root": "/",
      "frontend": "/frontend",
      "backend": "/backend",
      "electron": "/electron",
      "shared": "/shared",
      "config": "/config",
      "logs": "/logs",
      "docs": "/docs"
    },
    "file_paths": {
      "database": "/backend/todo.db",
      "schema": "/backend/schema.sql",
      "env_example": "/.env.example",
      "readme": "/README.md"
    },
    "validation": {
      "max_depth": 10,
      "allowed_extensions": [".ts", ".tsx", ".js", ".jsx", ".py", ".json", ".md", ".sql"],
      "blocked_patterns": ["../", "..\\", "<script", "javascript:"]
    },
    "aliases": {
      "@frontend": "/frontend/src",
      "@backend": "/backend",
      "@shared": "/shared",
      "@config": "/config"
    }
  }